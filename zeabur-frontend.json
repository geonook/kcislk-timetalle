{
  "name": "kcislk-timetable-frontend",
  "build": {
    "rootDirectory": "frontend",
    "buildCommand": "npm install && npm run build:production",
    "outputDirectory": "dist"
  },
  "deploy": {
    "framework": "vite",
    "installCommand": "npm install"
  },
  "environment": {
    "NODE_VERSION": "18",
    "NODE_ENV": "production",
    "VITE_APP_TITLE": "KCISLK 課表查詢系統",
    "VITE_API_BASE_URL": "https://kcislk-backend.zeabur.app/api",
    "VITE_APP_VERSION": "2.3.1",
    "VITE_DEV_MODE": "false",
    "VITE_ENABLE_DEVTOOLS": "false",
    "VITE_ENABLE_EXAM_PROCTOR": "false",
    "VITE_LOG_LEVEL": "error",
    "VITE_BUILD_TARGET": "es2015",
    "VITE_MINIFY": "true",
    "VITE_CSP_ENABLED": "true",
    "VITE_SECURE_COOKIES": "true",
    "VITE_DEPLOY_ENV": "zeabur"
  }
}