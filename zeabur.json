{
  "name": "kcislk-timetable-system",
  "app": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "domain": {
    "custom": false
  },
  "environment": {
    "PORT": "8080",
    "FLASK_ENV": "production",
    "DATABASE_PATH": "/app/data/app.db",
    "ALLOWED_ORIGINS": "https://kcislk-timetable-frontend.zeabur.app,https://*.zeabur.app"
  },
  "volumes": [
    {
      "name": "database",
      "mount": "/app/data",
      "size": "1GB"
    }
  ],
  "healthCheck": {
    "path": "/",
    "timeout": 30
  },
  "scaling": {
    "min": 1,
    "max": 3
  }
}