{
  "name": "kcislk-timetable-frontend",
  "app": {
    "type": "node",
    "buildCommand": "npm install && npm run build:zeabur",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "framework": "vite"
  },
  "domain": {
    "custom": false
  },
  "environment": {
    "NODE_ENV": "production",
    "VITE_APP_TITLE": "KCISLK 課表查詢系統",
    "VITE_API_BASE_URL": "https://timetable-api.zeabur.app/api",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_DEV_MODE": "false",
    "VITE_ENABLE_DEVTOOLS": "false",
    "VITE_LOG_LEVEL": "error",
    "VITE_BUILD_TARGET": "es2015",
    "VITE_MINIFY": "true",
    "VITE_CSP_ENABLED": "true",
    "VITE_SECURE_COOKIES": "true",
    "VITE_DEPLOY_ENV": "zeabur"
  },
  "healthCheck": {
    "path": "/",
    "timeout": 30
  },
  "scaling": {
    "min": 1,
    "max": 2
  },
  "routes": {
    "/*": {
      "rewrite": "/index.html"
    }
  }
}