# Staging Environment Variables
VITE_APP_TITLE=KCISLK 課表查詢系統 (測試版)
# API 配置 - 直接 CORS 呼叫 Backend API（Zeabur Vite 靜態托管不使用 Nginx 代理）
VITE_API_BASE_URL=https://kcislk-backend.zeabur.app/api
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION=康橋國際學校林口校區小學部課表查詢系統 - 測試環境

# Staging settings
VITE_DEV_MODE=false
VITE_ENABLE_DEVTOOLS=true

# Feature flags - Staging 啟用所有功能
VITE_ENABLE_EXAM_PROCTOR=true

# Performance settings
VITE_BUILD_ANALYZE=true
VITE_PRELOAD_IMAGES=true
VITE_LOG_LEVEL=warn

# Development helpers
VITE_SOURCE_MAP=true
VITE_HOT_RELOAD=false

# Security settings (relaxed for testing)
VITE_CSP_ENABLED=false
VITE_SECURE_COOKIES=false

# Build optimization
VITE_BUILD_TARGET=es2020
VITE_MINIFY=false

# Testing tools
VITE_MOCK_API=false
VITE_TEST_MODE=true